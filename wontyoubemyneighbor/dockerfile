FROM python:3.11

WORKDIR /app

# Install system dependencies including LLDP daemon for Layer 2 discovery
RUN apt-get update && apt-get install -y \
    iputils-ping \
    traceroute \
    iproute2 \
    tcpdump \
    lldpd \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Make entrypoint script executable
RUN chmod +x /app/docker-entrypoint.sh

# Set PYTHONPATH so bgp, ospf, etc. can be imported as top-level packages
ENV PYTHONPATH=/app

# Expose Web UI port
EXPOSE 8888

# Use entrypoint to start LLDP daemon before running the agent
ENTRYPOINT ["/app/docker-entrypoint.sh"]

# Default command - can be overridden
CMD ["python3", "wontyoubemyneighbor.py", "--help"]
